############# INPUT PARAMETERS #############
# example: /usr/bin/clang++
CXX=__configure_cxx__
# Must contain clang-c/Index.h. examples: /usr/include, /usr/lib/llvm-3.4/include
clang_include=__configure_clang_include__
# Must contain libclang.so. examples: /usr/lib, /usr/lib/llvm-3.4/lib
clang_lib=__configure_clang_lib__
###########################################

COMMON_CXXFLAGS=-std=c++11 -g -Wall

AST_CXXFLAGS=-O2 -I${clang_include} -L${clang_lib} -lclang ${COMMON_CXXFLAGS} -lrt
CU2CPP_CXXFLAGS=-O2 ${COMMON_CXXFLAGS} -lrt

RT_CXXFLAGS_PASS0=-c -O0 -fopenmp ${COMMON_CXXFLAGS} -DEDU_CUDA_COMPILE_PASS=0
RT_CXXFLAGS_PASS1=-O0 -fopenmp -lpthread ${COMMON_CXXFLAGS} -lrt -DEDU_CUDA_COMPILE_PASS=1
